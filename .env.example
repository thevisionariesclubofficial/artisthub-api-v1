# Environment Variables Template
# Copy this file to .env.dev, .env.staging, .env.prod and fill in the values

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=your-account-id

# Service Configuration
SERVICE_NAME=artisthub-api-v1
STAGE=dev

# DynamoDB
USERS_TABLE=${SERVICE_NAME}-users-${STAGE}
CASTING_TABLE=${SERVICE_NAME}-casting-${STAGE}

# Cognito
USER_POOL_ID=ap-south-1_xxxxxxxxx
USER_POOL_CLIENT_ID=1a2b3c4d5e6f7g8h9i0j
USER_POOL_DOMAIN=${SERVICE_NAME}-auth-${STAGE}

# API Configuration
API_ENDPOINT=https://xxxxxxxxxx.execute-api.ap-south-1.amazonaws.com

# Email Configuration (optional, if using custom email provider)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@artisthub.com

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_MFA=false
ENABLE_SOCIAL_LOGIN=false

# Logging
LOG_LEVEL=INFO

# Database
DB_CONNECTION_TIMEOUT=5000
DB_MAX_RETRIES=3

# Rate Limiting (if implemented)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
JWT_TOKEN_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=2592000

# Monitoring
ENABLE_XRAY=true
ENABLE_CLOUDWATCH_METRICS=true

# Third-party Services
S3_BUCKET_NAME=${SERVICE_NAME}-uploads-${STAGE}
S3_REGION=${AWS_REGION}

# Feature Toggles (for deployment control)
FEATURE_USER_PROFILES=true
FEATURE_CASTING_JOBS=true
FEATURE_MESSAGING=false
